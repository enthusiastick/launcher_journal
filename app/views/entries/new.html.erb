<%= render 'header' %>
<h1>New Entry</h1>
<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <p>You are wrong. Do it correctly.</p>
  <% end %>
    <div>
      <%= f.label :category %>:
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>
    </div>
    <div>
      <%= f.label :title %>:
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %>:<br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit %>
    </div>
<% end %>
